# ========================================
# Dialektika Portal Berita - Environment Configuration
# ========================================
# Copy this file to .env and update with your production values
# DO NOT commit .env file to version control!

# ========================================
# Application Settings
# ========================================
APP_ENV=production
APP_DEBUG=false

# ========================================
# Domain Configuration (for Traefik)
# ========================================
# Main application domain
DOMAIN=dialektika.yourdomain.com

# phpMyAdmin domain
PMA_DOMAIN=pma.dialektika.yourdomain.com

# ========================================
# Database Configuration
# ========================================
# Database host (use 'mysql' for Docker service name)
DB_HOST=mysql

# Database name
DB_NAME=portal_berita

# Database user (non-root user for application)
DB_USER=dialektika_user

# Database password for application user
# IMPORTANT: Change this to a strong password!
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# MySQL root password
# IMPORTANT: Change this to a strong password!
DB_ROOT_PASSWORD=CHANGE_ME_TO_STRONG_ROOT_PASSWORD

# ========================================
# File Upload Configuration
# ========================================
# Upload directory (relative to web root)
UPLOAD_DIR=uploads/

# Maximum file upload size
PHP_UPLOAD_MAX_FILESIZE=50M

# Maximum POST size
PHP_POST_MAX_SIZE=50M

# ========================================
# PHP Runtime Configuration
# ========================================
# PHP memory limit
PHP_MEMORY_LIMIT=256M

# PHP maximum execution time (seconds)
PHP_MAX_EXECUTION_TIME=300

# Display PHP errors (Off for production, On for development)
PHP_DISPLAY_ERRORS=Off

# ========================================
# phpMyAdmin Configuration
# ========================================
# phpMyAdmin host (should match DB_HOST)
PMA_HOST=mysql

# phpMyAdmin port
PMA_PORT=3306

# ========================================
# Notes
# ========================================
# 1. After copying this file to .env, update all passwords
# 2. Make sure DOMAIN and PMA_DOMAIN point to your actual domains
# 3. Ensure your Traefik reverse proxy is configured with:
#    - Entry points: web (80) and websecure (443)
#    - Certificate resolver: letsencrypt
# 4. The default admin credentials are in the database dump
#    Username: admin
#    Password: Check portal_berita.sql file
#    CHANGE THE PASSWORD IMMEDIATELY after first login!
